---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, pubDate, updatedDate, heroImage, readTime } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
		<style>
            /* YOUR CUSTOM HERMETIC STYLES */
			:root {
				--text-primary: #1a1a1a;
				--text-secondary: #4a4a4a;
				--accent-gold: #c9a227;
				--accent-deep: #8b7355;
				--accent-emerald: #2d5a4a;
				--bg-dark: #0d0d0d;
				--bg-parchment: #f5f2eb;
				--bg-quote: #eae6db;
				--border-subtle: #d4cfc2;
			}
			body {
				font-family: 'Cormorant Garamond', Georgia, serif;
				background: var(--bg-parchment);
				color: var(--text-primary);
                font-size: 20px;
                line-height: 1.85;
			}
            .hermetic-article {
                max-width: 680px;
                margin: 0 auto;
                padding: 0 24px 80px;
            }
            h1, h2, h3, h4 {
                font-family: 'Cinzel', serif;
                color: var(--text-primary);
            }
            h2 {
                font-size: 26px;
                margin-top: 56px;
                border-bottom: 1px solid var(--accent-gold);
                padding-bottom: 12px;
                display: inline-block;
            }
            .lead {
                font-size: 24px;
                font-style: italic;
                color: var(--text-secondary);
                border-left: 2px solid var(--accent-gold);
                padding-left: 24px;
                margin: 40px 0;
            }
            blockquote {
                font-family: 'Cinzel', serif;
                font-size: 22px;
                color: var(--accent-gold);
                background: linear-gradient(135deg, rgba(13,13,13,0.03) 0%, rgba(201,162,39,0.08) 100%);
                border-left: 3px solid var(--accent-gold);
                padding: 32px 24px;
                margin: 48px 0;
                text-align: center;
                position: relative;
            }
            blockquote::before {
                content: 'ð“‚€';
                display: block;
                font-size: 32px;
                margin-bottom: 12px;
            }
            .wisdom-box {
                background: linear-gradient(135deg, var(--bg-quote) 0%, #e8e4d9 100%);
                padding: 32px;
                border: 1px solid var(--border-subtle);
                border-left: 4px solid var(--accent-gold);
                margin: 56px 0;
                position: relative;
            }
            .wisdom-box::after {
                content: 'ð“‹¹';
                position: absolute;
                top: -14px;
                right: 24px;
                font-size: 24px;
                background: var(--bg-parchment);
                padding: 0 8px;
                color: var(--accent-gold);
            }
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="hermetic-article">
				<div class="article-meta">
                    {heroImage && <img width={1020} height={510} src={heroImage} alt="" style="border-radius: 4px; margin-bottom: 32px;" />}
                    <h1 style="font-size: 42px; line-height: 1.2; margin-bottom: 16px;">{title}</h1>
					<div style="font-family: 'Cinzel', serif; font-size: 14px; color: var(--accent-deep);">
						<time datetime={pubDate.toISOString()}>
							{pubDate.toLocaleDateString('en-us', {
								year: 'numeric',
								month: 'long',
								day: 'numeric',
							})}
						</time>
                        {readTime && <span> â€¢ ð“‚€ {readTime} min read</span>}
					</div>
				</div>
                
                <div class="content">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
